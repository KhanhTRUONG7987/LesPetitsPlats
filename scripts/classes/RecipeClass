import recipes from '../../data/recipes.js';

export class RecipeClass {
  recipes: any[];

  constructor() {
    this.recipes = [];
  }

  // Method to add a recipe
  addRecipe(recipe: any) {
    this.recipes.push(recipe);
  }

  // Method to retrieve all recipes
  getAllRecipes() {
    return this.recipes;
  }

  // Method to retrieve a recipe by its ID
  getRecipeById(id: number) {
    return this.recipes.find((recipe: any) => recipe.id === id);
  }
}

// Create an instance of RecipeClass
const recipeInstance = new RecipeClass();